{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es6",
      "DOM"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "*": [
        "../node_modules/*",
        "./*"
      ]
    }
  },
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "dist"
  ],
  "compileOnSave": false
}