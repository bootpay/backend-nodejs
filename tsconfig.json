{
  "compilerOptions": {
    "target": "esnext",
    "module": "node16",
    "declarationMap": false,
    "sourceMap": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "esnext",
      "DOM"
    ],
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "allowJs": true,
    "outDir": "./dist",
    "baseUrl": "./src/",
    "paths": {
      "*": [
        "../node_modules/*",
        "./*"
      ]
    }
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "dist"
  ],
  "compileOnSave": false
}